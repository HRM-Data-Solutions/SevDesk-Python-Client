{
    "allOf": [
        {
            "$ref": "../../common/schemas/Document.json"
        },
        {
            "required": [
                "invoiceDate",
                "invoiceType"
            ],
            "properties": {
                "objectName": {
                    "description": "The document object name",
                    "type": "string",
                    "readOnly": true,
                    "nullable": false,
                    "default": "Invoice"
                },
                "invoiceNumber": {
                    "description": "The invoice number",
                    "type": "string",
                    "example": "RE-1000",
                    "nullable": true
                },
                "invoiceDate": {
                    "description": "Needs to be provided as timestamp or dd.mm.yyyy",
                    "type": "string",
                    "format": "date-time",
                    "example": "01.01.20",
                    "nullable": false
                },
                "accountIntervall": {
                    "description": "The interval in which recurring invoices are due as ISO-8601 duration. Necessary attribute for all recurring invoices.",
                    "type": "string",
                    "default": null,
                    "nullable": true
                },
                "accountLastInvoice": {
                    "description": "Timestamp when the last invoice was generated by this recurring invoice.",
                    "type": "integer",
                    "default": null,
                    "nullable": true,
                    "deprecated": true
                },
                "accountNextInvoice": {
                    "description": "Timestamp when the next invoice will be generated by this recurring invoice.",
                    "type": "integer",
                    "default": null,
                    "nullable": true
                },
                "invoiceType": {
                    "description": "Type of the invoice. For more information on the different types, check our API-Overview",
                    "type": "string",
                    "default": "RE",
                    "enum": [
                        "RE",
                        "WKR",
                        "SR",
                        "MA",
                        "TR",
                        "ER"
                    ],
                    "nullable": false
                }
            },
            "type": "object"
        }
    ]
}